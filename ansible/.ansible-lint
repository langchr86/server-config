exclude_paths:
  - roles/homeassistant/files/configuration.yaml

skip_list:
  - command-instead-of-module
  - command-instead-of-shell
  - ignore-errors
  - line-length
  - name[casing]
  - name[missing]
  - name[play]
  - name[template]
  - no-handler
  - risky-shell-pipe
  - role-name
  - var-naming
  - yaml[line-length]
