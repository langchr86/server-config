exclude_paths:
  - roles/swapfile
  - roles/homeassistant/files/

skip_list:
  - command-instead-of-module
  - command-instead-of-shell
  - deprecated-command-syntax
  - experimental
  - ignore-errors
  - line-length
  - name[casing]
  - name[missing]
  - name[play]
  - name[template]
  - no-handler
  - risky-shell-pipe
  - unnamed-task
  - var-naming
  - yaml[line-length]
